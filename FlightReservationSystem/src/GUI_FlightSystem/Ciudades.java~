    public void limpiarCiudades() {
        txtid_ciudad.setText("");
        txtciudad.setText("");
        txtid_ciudad.setEditable(true);
        txtciudad.setEditable(true);
    }

    private void btnInsertarActionPerformed(java.awt.event.ActionEvent evt) {
        String nombreciudad = txtciudad.getText();
        if (cn.insertarCiudades(nombreciudad) && !nombreciudad.equals("")) {
            JOptionPane.showMessageDialog(null, "Se ha insertado la ciudad");
        } else {
            JOptionPane.showMessageDialog(null, "No se pudo insertar la ciudad");
        }
        limpiarCiudades();
    }

    private void btnBuscarActionPerformed(java.awt.event.ActionEvent evt) {
        int id_ciudad = Integer.parseInt(txtid_ciudad.getText());
        CiudadesE ciu = cn.buscarCiudades(id_ciudad);
        if (ciu!=null) {
            txtid_ciudad.setText(String.valueOf(ciu.getIdCiudad()));
            txtid_ciudad.setEditable(false);
            txtciudad.setText(ciu.getNombreCiudad());
        } else {
            JOptionPane.showMessageDialog(null, "No se pudo buscar la ciudad");
            limpiarCiudades();
        }
    }

    private void btnEliminarActionPerformed(java.awt.event.ActionEvent evt) {
        int id_ciudad = Integer.parseInt(txtid_ciudad.getText());
        if (cn.eliminarCiudades(id_ciudad)) {
            JOptionPane.showMessageDialog(null, "Se ha eliminado la ciudad");
        } else {
            JOptionPane.showMessageDialog(null, "No se pudo eliminar la ciudad");
        }
        limpiarCiudades();
    }

    private void btnLimpiarActionPerformed(java.awt.event.ActionEvent evt) {
            limpiarCiudades();
    }

    private void btnModificarActionPerformed(java.awt.event.ActionEvent evt) {
        int id_ciudad = Integer.parseInt(txtid_ciudad.getText());
        String nombreciudad = txtciudad.getText();
        if (cn.modificarCiudades(id_ciudad, nombreciudad)) {
            JOptionPane.showMessageDialog(null, "Se ha modificado la ciudad");
        } else {
            JOptionPane.showMessageDialog(null, "No se pudo modificar la ciudad");
        }
        limpiarCiudades();
    }


    
    private javax.swing.JButton btnLimpiar;
    private javax.swing.JButton jButton2;
    private javax.swing.JButton jButton3;
